root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,rb,html}]
indent_size = 2

[*.{scss,sass}]
indent_size = 4
indent_style = space

[*.{js,ts,svelte}]
indent_size = 4
indent_style = tab

[*.{md,rmd,mkd,mkdn,mdwn,mdown,markdown,litcoffee}]
tab_width = 4
trim_trailing_whitespace = false
