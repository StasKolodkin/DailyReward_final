{
	"compilerOptions": {
		"moduleResolution": "bundler",
		"target": "ESNext",
		"module": "ESNext",
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"checkJs": true,
		"paths": {
			"@api": ["./src/api"],
			"@components": ["./src/components"],
			"@fonts": ["./src/fonts"],
			"@json": ["./src/json"],
			"@popups": ["./src/popups"],
			"@router": ["./src/router.js"],
			"@store": ["./src/store"],
			"@styles": ["./src/styles"],
			"@views": ["./src/views"]
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte"]
}
